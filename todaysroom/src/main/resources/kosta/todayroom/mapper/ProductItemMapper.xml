<insert id="ProductItemRegister">
	insert into product (product_seq, store_seq, product_name, product_price, product_fname)
	values(SEQ_PRODUCT_PRODUCT_SEQ.nextval, 1, #{product_name}, #{product_price}, #{product_fname})
</insert>
	

<select id="ProductItemRead" resultType="kosta.todayroom.domain.ProductVO">
	select * from product where product_seq = #{product_seq}
</select>

<delete id="ProductItemRemove">
	delete from product where product_seq = #{product_seq}
</delete>

<update id="ProductItemModify">
	update product
	set product_name = #{product_name},
	product_price = #{product_price},
	product_fname = #{product_fname}
	where product_seq = #{product_seq}
</update>



</mapper>
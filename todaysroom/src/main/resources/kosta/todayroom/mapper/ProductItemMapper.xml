<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kosta.todayroom.mapper.ProductItemMapper">




<select id="ProductItemList" resultType="kosta.todayroom.domain.ProductVO">
	select * from product
</select>


